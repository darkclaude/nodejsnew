<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
                <a href="/dash" class="btn btn-info btn-sm">Data</a>
                <a href="/house" class="btn btn-info btn-sm">House</a>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.username %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

            </div>
        </div>
   <div class="col-sm-6">
            <div class="well">
                <h3 class="text-warning"><span class="fa fa-cogs"></span>API Token</h3>

                    <p>
                        <strong>Token</strong>: <%= user.local.token %><br>
                        
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>